<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="customButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/btn_entidades</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="customButton2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/btn_opciones</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">14</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_custom</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="generalTxt" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="recyclerTxt" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="customSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>



