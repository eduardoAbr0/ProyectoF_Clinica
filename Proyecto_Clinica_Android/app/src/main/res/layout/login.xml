<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_black"
            android:text="CLÍNICA BIENESTAR"
            android:textColor="#019f61"
            android:textSize="30dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ingresa tu usuario"
            android:fontFamily="@font/poppins_black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cajaUsuario"
            style="@style/customEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/caja_Usuario"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ingresa contraseña"
            android:fontFamily="@font/poppins_black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cajaContra"
            style="@style/customEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/caja_Pass"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            android:layout_marginTop="100dp"
            style="@style/customButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_IniciarSesion"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/textRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Crear nuevo usuario"
            android:textColor="#5dfcbd"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>